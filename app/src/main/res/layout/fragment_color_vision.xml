<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geebeelicious.geebeelicious.monitoring.fragments.ColorVisionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/relativeLayoutECA"
        android:id="@+id/relativeLayoutTest"
        android:background="#ffffff"
        android:layout_above="@+id/linearLayoutAnswers">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ishiharaPlate"
            android:layout_centerInParent="true"
            android:background="#ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_toStartOf="@+id/relativeLayoutECA"
        android:id="@+id/linearLayoutAnswers"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:id="@+id/cvt_option1"
            android:background="#FF80AB"
            android:layout_weight="0.2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:id="@+id/cvt_option2"
            android:background="#FFE57F"
            android:layout_weight="0.2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:id="@+id/cvt_option3"
            android:background="#CCFF90"
            android:layout_weight="0.2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:id="@+id/cvt_option4"
            android:background="#8C9EFF"
            android:layout_weight="0.2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:id="@+id/cvt_option5"
            android:background="#B388FF"
            android:layout_weight="0.2" />
    </LinearLayout>

</RelativeLayout>
