<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FineMotorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayoutTest"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_above="@+id/linearLayoutAnswers">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewPathToTrace"
            android:background="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:id="@+id/linearLayoutAnswers"
        android:weightSum="1"
        android:visibility="invisible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Yes"
            android:id="@+id/YesButton"
            android:minWidth="250dp"
            android:layout_weight="0.50"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            style="@style/TestButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/No"
            android:id="@+id/NoButton"
            android:minWidth="250dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.50"
            android:visibility="invisible"
            style="@style/TestButton"/>

    </LinearLayout>

</RelativeLayout>
