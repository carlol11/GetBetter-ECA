<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.geebeelicious.geebeelicious.consultation.ConsultationActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#4526b8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutECADialog"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECA: "
            android:id="@+id/placeholderECAText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutECADialog"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placeholderECA"
            android:src="#ff0000"
            android:minHeight="500dp"
            android:minWidth="500dp"
            android:longClickable="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/placeholderECA"
            android:id="@+id/answer">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Yes"
                    android:id="@+id/YesButton"
                    android:layout_centerHorizontal="true"
                    android:height="127dp"
                    android:textSize="50dp"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/YesButton"
                    android:layout_alignRight="@id/YesButton"
                    android:text="@string/No"
                    android:id="@+id/NoButton"
                    android:layout_below="@+id/YesButton"
                    android:layout_centerHorizontal="true"
                    android:height="127dp"
                    android:textSize="50dp"
                    />

            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
